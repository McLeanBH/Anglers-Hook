<div class="wrapper">
  <div class="nav-left"></div>
  <div class="index-navbar">
    <div class="nav-container">
      <ul>
        <li>{{link-to "Home" 'welcome'}}</li>
        <li>{{link-to "Register" 'register'}}</li>
        <li>{{link-to "Login" 'login'}}</li>
        <li>{{link-to "View-1" 'segue.view-one'}}</li>
      </ul>
    </div>
  </div>
  <div class="login">
    <form class="login-form"{{action 'login' on='submit'}}>
      <fieldset class="login-fieldset">
        <h1 class="login-header">Login</h1>
        <h4>Don't have an account? {{link-to "Create One Here" 'register'}}</h4>
        {{input class="login-email login-field inputters" value=email placeholder="Email Address"}}
        {{input type="password" class="login-password login-field inputters" value=password placeholder="Password"}}
        <input type="submit" value="Login" class="login-button"/>
      </fieldset>
    </form>
  </div>
</div>
